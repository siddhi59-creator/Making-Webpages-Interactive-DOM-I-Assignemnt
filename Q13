<!DOCTYPE html>
<html>
<head>
<title>Background & Text Updater</title>
<style>
  #displayBox {
    width: 300px;
    height: 150px;
    border: 2px solid black;
    margin-top: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
  }
</style>
</head>
<body>
  <input type="text" id="colorInput" placeholder="Enter color name" />
  <button id="bgBtn">Change Background</button>
  <br><br>
  <input type="text" id="textInput" placeholder="Enter text" />
  <button id="textBtn">Update Text</button>

  <div id="displayBox">Initial text content</div>

  <script>
    const colorInput = document.querySelector('#colorInput');
    const textInput = document.querySelector('#textInput');
    const displayBox = document.querySelector('#displayBox');
    const bgBtn = document.querySelector('#bgBtn');
    const textBtn = document.querySelector('#textBtn');

    bgBtn.addEventListener('click', () => {
      const color = colorInput.value.trim();
      const temp = document.createElement('div');
      temp.style.backgroundColor = color;

      if (temp.style.backgroundColor === '') {
        alert('Invalid color name!');
      } else {
        displayBox.style.backgroundColor = color;
      }
    });

    textBtn.addEventListener('click', () => {
      const text = textInput.value.trim();
      if (text === '') {
        alert('Please enter some text!');
      } else {
        displayBox.textContent = text;
      }
    });
  </script>
</body>
</html>
